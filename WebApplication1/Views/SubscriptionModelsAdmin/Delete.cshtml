@model WebApplication1.Models.SubscriptionModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Удаление подписки</h2>

<h3>Вы действительно хотите удалить эту подписку?</h3>
<div>
    <h4>Подписка</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Название
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Описание
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Количество проектов
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumberOfProj)
        </dd>

        <dt>
            Количество участников
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumberOfShared)
        </dd>

        <dt>
            Стоимость
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SubCost)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-danger" /> |
            @Html.ActionLink("Назад", "Index")
        </div>
    }
</div>
