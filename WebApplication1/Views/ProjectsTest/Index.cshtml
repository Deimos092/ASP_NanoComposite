@model IEnumerable<WebApplication1.Models.Project>

@{
    ViewBag.Title = "Проекты";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Проекты</h2>


@if (@ViewBag.User.SubModel.NumberOfProj>Model.Count())
{
    <p>
        @Html.ActionLink("Создать проект", "Create")
    </p>
    <div id="maxUsersInfo" class="alert alert-info"> Максимальное число проектов: @ViewBag.User.SubModel.NumberOfProj</div>
}
else
{
    <div id="maxUsersInfo" class="alert alert-danger"> Максимальное число проектов: @ViewBag.User.SubModel.NumberOfProj</div>
}
<table class="table col-md-5">
    <tr>
        <th>
            Название
        </th>
        <th>
            Описание
        </th>
        <th>
            Дата создания
        </th>
        <th>
            Владелец
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.ProjectName, "ProjectContent", new { id = item.ProjectID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Owner.Email)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.ProjectID }) |
            @Html.ActionLink("Подробнее", "Details", new { id=item.ProjectID }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.ProjectID })
        </td>
    </tr>
}
</table>